<h1>Listing submits</h1>

<table>
  <tr>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @submits.each do |submit| %>
  <tr>
    <td><%= submit.active %></td>
    <td><%= link_to 'Show', submit %></td>
    <td><%= link_to 'Edit', edit_submit_path(submit) %></td>
    <td><%= link_to 'Destroy', submit, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

